<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VidaOrganizadaMAUI.Views.HabitosPage"
             Title="Hábitos">

    <VerticalStackLayout Padding="12" Spacing="12">

        <!-- CAMPOS -->
        <Entry x:Name="entryHabitoNombre"
               Placeholder="Nombre del hábito" />

        <Entry x:Name="entryHabitoFrecuencia"
               Placeholder="Frecuencia (Diario, Semanal)" />

        <!-- BOTÓN AGREGAR -->
        <Button Text="Agregar hábito"
                Clicked="AgregarHabito_Clicked"
                BackgroundColor="#8A1313"
                TextColor="White"
                CornerRadius="12"
                Padding="14,6">

            <VisualStateManager.VisualStateGroups>
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">

                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#8A1313"/>
                                <Setter Property="Scale" Value="1"/>
                            </VisualState.Setters>
                        </VisualState>

                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#963B3B"/>
                                <Setter Property="Scale" Value="0.95"/>
                            </VisualState.Setters>
                        </VisualState>

                    </VisualStateGroup>
                </VisualStateGroupList>
            </VisualStateManager.VisualStateGroups>
        </Button>

        <!-- TÍTULO -->
        <Label Text="Hábitos"
               FontAttributes="Bold"
               FontSize="18" />

        <!-- LISTA -->
        <CollectionView x:Name="cvHabitos"
                        HeightRequest="400">
            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <!-- TARJETA -->
                    <Frame Padding="10"
                           Margin="4"
                           BorderColor="#DDD"
                           CornerRadius="10">

                        <Grid ColumnDefinitions="6,*">

                            <!-- FRANJA DE COLOR -->
                            <BoxView Color="#8A1313"
                                     Grid.RowSpan="3"/>

                            <HorizontalStackLayout Grid.Column="1"
                                                   Spacing="6"
                                                   Padding="4,0">

                                <VerticalStackLayout HorizontalOptions="FillAndExpand">
                                    <Label Text="{Binding Nombre}"
                                           FontAttributes="Bold"
                                           FontSize="16" />

                                    <Label Text="{Binding Frecuencia}"
                                           FontSize="13"
                                           TextColor="#444" />
                                </VerticalStackLayout>

                                <!-- BOTÓN ELIMINAR -->
                                <Button Text="Eliminar"
                                        Clicked="EliminarHabito_Clicked"
                                        CommandParameter="{Binding Id}"
                                        BackgroundColor="#8A1313"
                                        TextColor="White"
                                        CornerRadius="12"
                                        Padding="12,4"
                                        HorizontalOptions="End">

                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroupList>
                                            <VisualStateGroup x:Name="CommonStates">

                                                <VisualState x:Name="Normal">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="#8A1313"/>
                                                        <Setter Property="Scale" Value="1"/>
                                                    </VisualState.Setters>
                                                </VisualState>

                                                <VisualState x:Name="Pressed">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="#963B3B"/>
                                                        <Setter Property="Scale" Value="0.92"/>
                                                    </VisualState.Setters>
                                                </VisualState>

                                            </VisualStateGroup>
                                        </VisualStateGroupList>
                                    </VisualStateManager.VisualStateGroups>

                                </Button>

                            </HorizontalStackLayout>

                        </Grid>

                    </Frame>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
