<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VidaOrganizadaMAUI.Views.MainPage"
             Title="Vida Organizada">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">
            <Label x:Name="lblSaludo" FontSize="20" />
            <Label Text="Módulos" FontAttributes="Bold" />
            <Button Text="Tareas" Clicked="OpenTareas" />
            <Button Text="Calendario" Clicked="OpenCalendario" />
            <Button Text="Hábitos" Clicked="OpenHabitos" />
            <Button Text="Notas" Clicked="OpenNotas" />
            <Button Text="Cerrar sesión" Clicked="CerrarSesion" BackgroundColor="#f44336" TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
